<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="startandroid.androidcalc.MainActivityTwo"
    tools:showIn="@layout/activity_main_two">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="224dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="125dp"
        android:layout_marginEnd="25dp">

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="3.63"
        android:text="         Activity Two"
        android:textSize="35dp"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="176dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/button21"
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Go to activity 1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="2dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="6dp"
            android:text="Go to activity 3"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="2dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
